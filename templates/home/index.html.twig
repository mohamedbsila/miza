        /* Product Grid Styles */
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            padding: 2rem;
        }

        .product-item {
            position: relative;
            overflow: hidden;
            border-radius: 8px;
            transition: transform 0.3s ease;
            aspect-ratio: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .product-item:hover {
            transform: translateY(-5px);
        }

        .product-image {
            position: relative;
            width: 70%;
            height: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: opacity 0.5s ease;
            display: block;
            margin: 0 auto;
        }

        .product-image .image-off {
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .product-item:hover .image-off {
            opacity: 1;
        }

        .product-item h3 {
            position: absolute;
            bottom: 20px;
            color: #fff;
            font-size: 1.5rem;
            font-weight: 500;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            z-index: 2;
            text-align: center;
            width: 100%;
        }

        /* Dark mode adjustments */
        body.dark-mode .product-item h3 {
            color: #fff;
        }

        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 1rem;
                padding: 1rem;
            }

            .product-item h3 {
                font-size: 1.2rem;
                bottom: 15px;
                left: 15px;
            }
        }

        /* Meet Our Icons Section Styles */
        .meet-icons {
            padding: 4rem 2rem;
            background-color: #FEFBEC;
            transition: background-color 0.3s ease;
        }

        .icons-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            align-items: center;
        }

        .icons-image {
            position: relative;
            width: 100%;
            height: 100%;
            min-height: 400px;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
        }

        .icons-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .icons-image:hover img {
            transform: scale(1.05);
        }

        .icons-content {
            padding: 2rem;
        }

        .icons-content h2 {
            font-size: 2.5rem;
            color: #2B2F0E;
            margin-bottom: 1.5rem;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .icons-content p {
            font-size: 1.1rem;
            color: #666;
            line-height: 1.6;
            margin-bottom: 2rem;
            transition: color 0.3s ease;
        }

        .shop-icons-btn {
            display: inline-block;
            padding: 1rem 2rem;
            background-color: #2B2F0E;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            font-size: 1rem;
            letter-spacing: 0.1em;
            transition: all 0.3s ease;
            border: 2px solid #2B2F0E;
        }

        .shop-icons-btn:hover {
            background-color: transparent;
            color: #2B2F0E;
        }

        /* Dark Mode Styles */
        body.dark-mode .meet-icons {
            background-color: #1a1a1a;
        }

        body.dark-mode .icons-content h2 {
            color: #fff;
        }

        body.dark-mode .icons-content p {
            color: #999;
        }

        body.dark-mode .shop-icons-btn {
            background-color: #fff;
            color: #1a1a1a;
            border-color: #fff;
        }

        body.dark-mode .shop-icons-btn:hover {
            background-color: transparent;
            color: #fff;
        }

        body.dark-mode .icons-image {
            box-shadow: 0 4px 6px rgba(255, 255, 255, 0.1);
        }

        /* Responsive Styles */
        @media (max-width: 992px) {
            .icons-container {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .icons-content {
                padding: 1rem;
                text-align: center;
            }

            .icons-content h2 {
                font-size: 2rem;
            }

            .icons-image {
                min-height: 300px;
            }
        }

        @media (max-width: 768px) {
            .meet-icons {
                padding: 3rem 1rem;
            }

            .icons-content h2 {
                font-size: 1.8rem;
            }

            .icons-content p {
                font-size: 1rem;
            }
        }

        /* Cordless Section Styles */
        .cordless-section {
            padding: 4rem 2rem;
            background-color: #FEFBEC;
            transition: background-color 0.3s ease;
        }

        .cordless-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            align-items: center;
        }

        .cordless-image {
            position: relative;
            width: 100%;
            height: 100%;
            min-height: 400px;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
            order: 2;
        }

        .cordless-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .cordless-image:hover img {
            transform: scale(1.05);
        }

        .cordless-content {
            padding: 2rem;
            order: 1;
        }

        .cordless-content h2 {
            font-size: 2.5rem;
            color: #2B2F0E;
            margin-bottom: 1.5rem;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .cordless-content p {
            font-size: 1.1rem;
            color: #666;
            line-height: 1.6;
            margin-bottom: 2rem;
            transition: color 0.3s ease;
        }

        .shop-cordless-btn {
            display: inline-block;
            padding: 1rem 2rem;
            background-color: #2B2F0E;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            font-size: 1rem;
            letter-spacing: 0.1em;
            transition: all 0.3s ease;
            border: 2px solid #2B2F0E;
        }

        .shop-cordless-btn:hover {
            background-color: transparent;
            color: #2B2F0E;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(43,47,14,0.2);
        }

        /* Dark Mode Styles */
        body.dark-mode .cordless-section {
            background-color: #1a1a1a;
        }

        body.dark-mode .cordless-content h2 {
            color: #fff;
        }

        body.dark-mode .cordless-content p {
            color: #999;
        }

        body.dark-mode .shop-cordless-btn {
            background-color: #fff;
            color: #1a1a1a;
            border-color: #fff;
        }

        body.dark-mode .shop-cordless-btn:hover {
            background-color: transparent;
            color: #fff;
            box-shadow: 0 4px 8px rgba(255,255,255,0.2);
        }

        body.dark-mode .cordless-image {
            box-shadow: 0 4px 6px rgba(255, 255, 255, 0.1);
        }

        /* Responsive Styles */
        @media (max-width: 992px) {
            .cordless-container {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .cordless-content {
                padding: 1rem;
                text-align: center;
                order: 2;
            }

            .cordless-image {
                order: 1;
                min-height: 300px;
            }

            .cordless-content h2 {
                font-size: 2rem;
            }
        }

        @media (max-width: 768px) {
            .cordless-section {
                padding: 3rem 1rem;
            }

            .cordless-content h2 {
                font-size: 1.8rem;
            }

            .cordless-content p {
                font-size: 1rem;
            }
        }

        /* Search icon styling */
        .search-toggle svg {
            width: 24px;
            height: 24px;
            fill: #2B2F0E;
            transition: fill 0.3s ease;
        }

        body.dark-mode .search-toggle svg {
            fill: #fff;
        }

        /* Search Overlay Styles */
        .search-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.98);
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .search-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .search-container {
            max-width: 800px;
            margin: 100px auto 0;
            padding: 0 20px;
        }

        .search-input-wrapper {
            position: relative;
            margin-bottom: 30px;
            border-bottom: 2px solid #2B2F0E;
            transition: border-color 0.3s ease;
        }

        .search-input {
            width: 100%;
            padding: 15px 50px 15px 0;
            font-size: 24px;
            background: transparent;
            border: none;
            outline: none;
            color: #2B2F0E;
        }

        .search-button {
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            padding: 5px;
        }

        .search-button:hover {
            opacity: 0.8;
        }

        .search-button svg {
            width: 24px;
            height: 24px;
            fill: #2B2F0E;
        }

        body.dark-mode .search-button svg {
            fill: #fff;
        }

        .search-close {
            position: absolute;
            top: 30px;
            right: 30px;
            font-size: 40px;
            background: none;
            border: none;
            color: #2B2F0E;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .search-results {
            max-height: calc(100vh - 250px);
            overflow-y: auto;
            padding: 20px 0;
        }

        .search-result-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 10px;
        }

        .search-result-item:hover {
            background-color: rgba(43, 47, 14, 0.05);
            transform: translateY(-2px);
        }

        .search-result-image {
            width: 80px;
            height: 80px;
            margin-right: 20px;
            border-radius: 4px;
            overflow: hidden;
        }

        .search-result-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .search-result-info {
            flex: 1;
        }

        .search-result-name {
            font-size: 18px;
            font-weight: 500;
            color: #2B2F0E;
            margin-bottom: 5px;
        }

        .search-result-category {
            font-size: 14px;
            color: #666;
            margin-bottom: 5px;
        }

        .search-result-price {
            font-size: 16px;
            font-weight: 500;
            color: #2B2F0E;
        }

        /* Dark mode styles for search */
        body.dark-mode .search-overlay {
            background-color: rgba(26, 26, 26, 0.98);
        }

        body.dark-mode .search-input-wrapper,
        body.dark-mode .search-results {
            border-color: #fff;
        }

        body.dark-mode .search-input {
            color: #fff;
        }

        body.dark-mode .search-close {
            color: #fff;
        }

        body.dark-mode .search-result-item {
            background-color: rgba(255, 255, 255, 0.05);
        }

        body.dark-mode .search-result-name,
        body.dark-mode .search-result-price {
            color: #fff;
        }

        body.dark-mode .search-result-category {
            color: #999;
        }

        body.dark-mode .search-result-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Logo transparency when search is active */
        .search-overlay.active ~ .main-nav .nav-logo img {
            opacity: 0.5;
        }

        /* Search suggestions */
        .search-suggestions {
            padding: 20px 0;
        }

        .search-suggestion {
            padding: 10px 0;
            border-bottom: 1px solid rgba(43, 47, 14, 0.1);
        }

        .search-suggestion a {
            color: #2B2F0E;
            text-decoration: none;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .search-suggestion a:hover {
            color: #666;
        }

        body.dark-mode .search-suggestion {
            border-color: rgba(255, 255, 255, 0.1);
        }

        body.dark-mode .search-suggestion a {
            color: #fff;
        }

        .search-results-info {
            text-align: center;
            padding: 40px 0;
        }

        .search-results-info h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .search-results-info p {
            font-size: 16px;
            color: #666;
        }

        body.dark-mode .search-results-info,
        body.dark-mode .search-results-info h2 {
            color: #fff;
        }

        body.dark-mode .search-results-info p {
            color: #999;
        }

        .inspiration-galleries {
            padding: 60px 0;
            background: transparent;
        }

        .galleries-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            padding: 0 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .gallery-item {
            position: relative;
            aspect-ratio: 1;
            overflow: hidden;
        }

        .gallery-link {
            display: block;
            width: 100%;
            height: 100%;
            position: relative;
            text-decoration: none;
        }

        .gallery-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .gallery-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 2rem;
            background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
            color: white;
            text-align: center;
            transform: translateY(20%);
            transition: transform 0.3s ease;
        }

        .gallery-title {
            font-size: 1.5rem;
            margin: 0 0 1rem;
            font-weight: 500;
        }

        .gallery-button {
            display: inline-block;
            padding: 0.5rem 1.5rem;
            background: white;
            color: #2B2F0E;
            border-radius: 4px;
            font-weight: 500;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }

        .gallery-link:hover .gallery-image {
            transform: scale(1.05);
        }

        .gallery-link:hover .gallery-overlay {
            transform: translateY(0);
        }

        .gallery-link:hover .gallery-button {
            opacity: 1;
            transform: translateY(0);
        }

        @media (max-width: 1024px) {
            .galleries-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 640px) {
            .galleries-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
